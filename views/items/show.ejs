<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>    

<main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
      <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
          <header class="mb-4 lg:mb-6 not-format">
              <address class="flex items-center mb-6 not-italic">
                  <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
                      <img class="mr-4 w-16 h-16 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-2.jpg" alt="Jese Leos">
                      <div>
                          <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white"><%=authorName%></a>
                          <p class="text-base text-gray-500 dark:text-gray-400"><time pubdate datetime="2022-02-08" title="February 8th, 2022"><% if(item.createdAt){ %>
                            <%=item.createdAt.toDateString() %>
                            <% } %></time></p>
                      </div>
                  </div>
              </address>
              <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"><%= item.title %></h1>
          </header>
          <p class="lead text-white mb-5">
            
            <figure class="w-full">
              <img src="<%= item.img %>" alt="" class="w-full h-96 object-cover">
              <!-- <figcaption class="text-white mt-5">Digital art by Anonymous</figcaption> -->
            </figure>
            
            
            
          <h2 class="text-white text-3xl font-bold mb-2 mt-2">See details  <%= item.title %> </h2>
          <p class="text-white">
            <%= item.desc %>
          </p>

          <h1 class="text-white text-3xl font-bold mb-2 mt-2">Contact me : <%= item.contact %></h1>




          


          <% if(currentUser){ %>
            <div class="flex items-center space-x-7">
              <a href="/item/<%= item.id%>/edit" class="text-yellow-500 hover:text-yellow-700 font-medium transition-colors duration-300">Edit</a>
              <form action="<%= item.id %>/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this recipe?')">
                <button type="submit" class="text-red-500 hover:text-red-700 font-medium transition-colors duration-300">Delete</button>
              </form>
            </div>
            
          <% } %>
          
                         
          
      </article>
  </div>
</main>


<aside aria-label="Related articles" class="py-8 lg:py-24 bg-gray-50 dark:bg-gray-800">
  <div class="px-4 mx-auto max-w-screen-xl">
      <h2 class="mb-8 text-2xl font-bold text-gray-900 dark:text-white">Related Articles</h2>
      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
        <% for(let b of relatedItem){ %>
          <article class="max-w-xs h-full overflow-hidden rounded-lg shadow-lg bg-white dark:bg-gray-900 flex flex-col">
            <a href="#">
              <img src="<%= b.img %>" class="object-cover w-full h-32 sm:h-48 rounded-t-lg" alt="Image 1">
            </a>
            <div class="p-4 flex-1 flex flex-col">
              <h2 class="mb-2 text-xl font-bold leading-tight text-gray-900 dark:text-white">
                <a href="#"><%= b.title %></a>
              </h2>
              <p class="mb-4 text-gray-500 dark:text-gray-400 line-clamp-3"><%= b.desc %></p>
              <div class="mt-auto">
                <a href="/item/<%= b._id %>" class="text-white inline-flex items-center font-medium underline underline-offset-4 text-primary-600 dark:text-primary-500 hover:no-underline">
                  View Item
                </a>
              </div>
            </div>
          </article>
        <% } %>
      </div>
      
  </div>
</aside>

<footer class="bg-gray-50 dark:bg-gray-800 antialiased">
  <div class="p-4 py-6 mx-auto max-w-screen-xl md:p-8 lg:p-10">
      
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8">
      <div class="text-center">
          <h1 class="font-bold text-3xl text-gray-900 dark:text-white"><em>Lost & Found</em></h1>
      </div>
  </div>
</footer>


